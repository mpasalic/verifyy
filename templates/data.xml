<chart palette='3' caption='{{ exp.y_name }} with {{ exp.x_name }}' yAxisName='{{ exp.y_units }}' xAxisName='{{ exp.x_units }}' showLegend='0' showLabels='1' xAxisMaxValue='{{ xmax }}' xAxisMinValue='{{ xmin }}' >

<categories verticalLineThickness='1'>
{% for axi in xaxis %}
	<category label='{{ axi }}' x='{{ axi }}' showVerticalLine='1'/>
{% endfor %}
</categories>


<dataSet seriesName='data' color='0372AB' plotBorderThickness='0' showPlotBorder='1' anchorSides='3'>
{% for datapoint in data %}
	<set id="{{ forloop.counter }}" x="{{ datapoint.x }}" y="{{ datapoint.y }}" tooltext="{{ datapoint.comments }}"/>
{% endfor %}
</dataSet>

<styles>
	<definition>
		<style name="myCaptionFont" type="font" font="Arial" size="14" bold="1" underline="1" /> 
	</definition>
	<application>
		<apply toObject="Caption" styles="myCaptionFont" /> 
	</application>
</styles>

<extra>
	<xmin>{{ xmin }}</xmin>
	<ymin>{{ ymin }}</ymin>
	<xmax>{{ xmax }}</xmax>
	<ymax>{{ ymax }}</ymax>
</extra>
</chart>
